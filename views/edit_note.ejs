<%- include('./includes/header',{pageTitle:pageTitle}) %>
    <div class="container my-3">
        <h2 class="text-center">Simple Notes App using JavaScript</h2>
        <div class="card shadow-sm rounded-0">
            <!-- views/includes/edit_note.ejs-->
            <form  action="/update-notes" method="POST">
                <div class="card-body">
                    <h5 class="card-title">Edit Note</h5>
            
                    <div class="form-group">
                        <input type="hidden" name="note_id" value="<%-singleNote.id%>">
                        <textarea id="addTxt" name="text" class="form-control rounded-0" rows="3"><%-singleNote.title%></textarea>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary rounded-0">Update Note</button>
                        <button id="cancelBtn" class="btn btn-secindary rounded-0 border">Cancel</button>
                    </div>
            
                </div>
            </form>  
        </div>
        <hr>
          
    <%- include('./includes/footer') %>    
    